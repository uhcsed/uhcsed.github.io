{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/people{,/**}",
        "destination": "/people.html"
      },
      {
        "source": "/publications{,/**}",
        "destination": "/publications.html"
      },
      {
        "source": "/news{,/**}",
        "destination": "/news.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}